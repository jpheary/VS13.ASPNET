@{
    ViewBag.Title = "Tables";
}
<h2>Tables</h2>
<hr />

<h3>Striped Rows <code>&lt;table class="table table-striped"&gt;</code></h3>
<table class="table table-striped">
    <thead><tr><th>First Name</th><th>Last Name</th><th>Gender</th></tr></thead>
    <tbody>
        <tr><td>John</td><td>Smith</td><td>male</td></tr>
        <tr><td>Jane</td><td>Smith</td><td>female</td></tr>
        <tr><td>Elizabeth</td><td>Smith</td><td>female</td></tr>
    </tbody>
</table>
<br />

